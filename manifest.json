{
  "manifest_version": 2,
  "name": "Privacy Detector",
  "version": "1.0",
  "description": "Detecta e apresenta a quantidade de cookies, web storage e conexões para domínios de terceira parte.",
  "permissions": [
    "tabs",
    "webRequest",
    "webRequestBlocking",
    "storage",
    "cookies",
    "<all_urls>"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon-16.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    }
  },
  "icons": {
    "48": "icons/icon-48.png"
  }
}
